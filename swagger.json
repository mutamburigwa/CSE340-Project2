  "definitions": {
    "Product": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "example": "Laptop"
        },
        "description": {
          "type": "string",
          "example": "A high-performance laptop"
        },
        "price": {
          "type": "number",
          "example": 1200.50
        },
        "stock": {
          "type": "integer",
          "example": 50
        }
      }
    },
    "Transaction": {
      "type": "object",
      "properties": {
        "transactionId": {
          "type": "string",
          "example": "T123456"
        },
        "productId": {
          "type": "string",
          "example": "P123456"
        },
        "quantity": {
          "type": "integer",
          "example": 2
        },
        "totalAmount": {
          "type": "number",
          "example": 2401.00
        },
        "date": {
          "type": "string",
          "format": "date",
          "example": "2024-11-23"
        }
      }
    }
  }
}